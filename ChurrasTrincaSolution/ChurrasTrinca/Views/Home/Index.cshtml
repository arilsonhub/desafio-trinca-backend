@model ChurrasTrinca.Models.Usuario

<div class="container">
    <div class="row text-center ">
        <div class="col-md-12">
            <br />
            <br />
            <h2>Churras da Trinca</h2>

            <h5>( Faça login para acessar o sistema )</h5>
            <br />
        </div>
    </div>    
@using (Html.BeginForm("Autenticar", "", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "frmLogin" }))
{
        @Html.AntiForgeryToken();
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong> Entre com suas credenciais para acessar </strong>
                    </div>
                    <div class="panel-body">
                        <br />
                        <div class="form-group input-group">
                            <span class="input-group-addon"><i class="fa fa-tag"></i></span>                            
                            @Html.EditorFor(login => Model.login, new { htmlAttributes = new { @class = "form-control", placeholder = "Usuário", type="text" }})
                        </div>
                        <div class="form-group input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>                            
                            @Html.EditorFor(senha => Model.senha, new { htmlAttributes = new { @class = "form-control", placeholder = "Senha", type = "password" }})
                        </div>                        
                        <a href="javascript:enviarForm();" class="btn btn-primary">Acessar</a>
                    </div>
                </div>
            </div>
        </div>
}
</div>
<script>
        function enviarForm(){
			document.getElementById("frmLogin").submit();
        }
</script>